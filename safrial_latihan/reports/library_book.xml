<odoo>
    <record id="paperformat_library_book" model="report.paperformat">
        <field name="name">Library Book Report Format</field>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_spacing">30</field>
        <field name="dpi">90</field>
    </record>

    <template id="report_library_book_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="book">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Laporan Buku</h2>
                        <table class="table table-bordered">
                            <tr>
                                <th>Nama Buku</th>
                                <td><t t-esc="book.name"/></td>
                            </tr>
                            <tr>
                                <th>ISBN</th>
                                <td><t t-esc="book.isbn"/></td>
                            </tr>
                            <tr>
                                <th>Tanggal Publish</th>
                                <td><t t-esc="book.published_date" t-options="{'widget': 'date'}"/></td>
                            </tr>
                            <tr>
                                <th>Harga</th>
                                <td><t t-esc="book.price"/></td>
                            </tr>
                            <tr>
                                <th>Ketersediaan</th>
                                <td><t t-esc="book.available"/></td>
                            </tr>
                            <tr>
                                <th>Kategori</th>
                                <td><t t-esc="book.category_id.name"/></td>
                            </tr>
                            <tr>
                                <th>Penulis</th>
                                <td><t t-esc="book.author_ids.name"/></td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="action_report_library_book" model="ir.actions.report">
        <field name="name">Laporan Buku</field>
        <field name="model">library.book</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">safrial_latihan.report_library_book_template</field>
        <field name="paperformat_id" ref="paperformat_library_book"/>
        <field name="print_report_name">('Laporan Buku')</field>
        <field name="binding_model_id" ref="safrial_latihan.model_library_book" />
        <field name="binding_type">report</field>
    </record>
    

    <record id="action_report_library_book_xlsx" model="ir.actions.report">
        <field name="name">Laporan Buku (XLSX)</field>
        <field name="model">library.book</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">safrial_latihan.report_library_book_xlsx</field>
        <field name="report_file">safrial_latihan.report_library_book_xlsx</field>
        <field name="binding_model_id" ref="model_library_book"/>
        <field name="binding_type">report</field>
        <field name="attachment_use" eval="False"/>
    </record>
</odoo>